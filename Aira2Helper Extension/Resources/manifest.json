{
	"manifest_version": 3,
	"default_locale": "en",

	"name": "Aria2 Helper",
	"description": "Send download links or files to your Aria2.",
	"version": "1.0",

	"icons": {
		"48": "images/icon-48.png",
		"96": "images/icon-96.png",
		"128": "images/icon-128.png",
		"256": "images/icon-256.png",
		"512": "images/icon-512.png"
	},

	"background": {
		"scripts": ["background.js"],
		"type": "module"
	},

	"options_page": "settings.html",

	"content_scripts": [
		{
			"js": ["content.js"],
			"matches": ["*://*/*"]
		}
	],

	"action": {
		"default_title": "Aria2Helper",
		"default_popup": "popup.html",
		"default_icon": "images/toolbar-icon.svg"
	},

	"web_accessible_resources": ["background.js", "content.js", "images/*", "popup.html", "settings.html"],

	"permissions": ["nativeMessaging", "devtools", "fileSystem", "storage", "contextMenus", "activeTab", "notifications", "alert", "webRequest"],
	"host_permissions": ["<all_urls>"],
	"optional_permissions": ["<all_urls>"],

	"browser_specific_settings": {
		"gecko": {
			"id": "Aria2Helper@wxmvv.cc"
		}
	}
}
